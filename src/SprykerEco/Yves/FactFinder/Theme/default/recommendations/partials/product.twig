<div class="callout js-product-container">
    <a href="{{ detailsUrl }}" class="thumbnail __preview-image fact-finder-track" data-tracking="{{trackInfo|json_encode}}">
        <img src="{{ imageUrl }}">
    </a>
    {% if idProductAbstract is defined %}
        {{ spyProductGroupItems(idProductAbstract, '@FactFinder/recommendations/partials/product-group-items.twig') }}
    {% endif %}
    <p>
        <strong>{{ name }}</strong><br>
        {{ priceValue }}
    </p>
    <a class="button expanded fact-finder-track" href="{{ detailsUrl }}" data-tracking="{{trackInfo|json_encode}}">View &raquo;</a>
</div>
